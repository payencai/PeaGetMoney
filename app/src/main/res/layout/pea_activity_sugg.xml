<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.activity.ManapwdActivity">
    <include layout="@layout/pea_top"></include>
    <TextView
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/tv_333"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="意见反馈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/ccc"
        android:textSize="@dimen/sp_14"
        android:text="请填写问题和意见"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_margin="15dp"
        android:background="@drawable/shape_solid_bg"
        android:layout_width="match_parent"
        android:layout_height="230dp">
       <EditText
           android:textColorHint="@color/ccc"
           android:textSize="13sp"
           android:hint="请输入不少于10个字的描述"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/ccc"
            android:text="0/100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/ccc"
            android:textSize="@dimen/sp_14"
            android:text="请提供相关问题图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_marginRight="25dp"
            android:textColor="@color/ccc"
            android:text="0/1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:layout_marginLeft="15dp"
        android:background="@mipmap/sugg_img"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </ImageView>

</LinearLayout>