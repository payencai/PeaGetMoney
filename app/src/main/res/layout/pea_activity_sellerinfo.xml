<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f9"
    android:layout_height="wrap_content"
    tools:context=".home.activity.SellerinfoActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/pea_top"></include>
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/tv_333"
                android:text="基本信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/hao"
                    android:textColor="@color/tv_333"
                    android:text="商户号 "
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/hao"
                    android:textColor="@color/tv_999"
                    android:text="3243435454554"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/shop"
                    android:textColor="@color/tv_333"
                    android:text="商户名称"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/shop"
                    android:textColor="@color/tv_999"
                    android:text="广州市信息枢纽楼"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/name"
                    android:textColor="@color/tv_333"
                    android:text="法人姓名"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/name"
                    android:textColor="@color/tv_999"
                    android:text="李白"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/tv_333"
                android:text="其他信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/other1"
                    android:textColor="@color/tv_333"
                    android:text="营业范围 "
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/other1"
                    android:textColor="@color/tv_999"
                    android:text="柴米油盐"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/other2"
                    android:textColor="@color/tv_333"
                    android:text="所属地区"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/other2"
                    android:textColor="@color/tv_999"
                    android:text="广州市信息广州市信息枢纽楼广州市信息枢纽楼枢纽楼"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="20sp"
                android:textColor="@color/tv_333"
                android:text="身份信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
            android:layout_marginTop="10dp"
            android:alpha="0.8"
            android:textSize="14sp"
            android:textColor="@color/tv_333"
            android:text="身份正面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zheng"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <TextView
                android:layout_marginTop="15dp"
                android:alpha="0.8"
                android:textSize="14sp"
                android:textColor="@color/tv_333"
                android:text="身份反面"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/fan"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>