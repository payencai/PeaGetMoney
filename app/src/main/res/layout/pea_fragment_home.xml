<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/f9"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".home.fragment.HomeFragment">
    <RelativeLayout

        android:background="@mipmap/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="豌豆收银"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="21dp"
            android:layout_height="21dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/msg" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/red_msg" />
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/money"
        android:elevation="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/shape_fill_white"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:src="@mipmap/eye"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="8dp"/>
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toLeftOf="@id/line"
                android:textColor="@color/tv_green"
                android:textSize="20sp"
                android:text="214343"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/line"
                android:layout_centerHorizontal="true"
                android:background="@color/E5"
                android:layout_width="1dp"
                android:layout_height="15dp"></View>
            <TextView
                android:layout_toRightOf="@id/line"
                android:textColor="@color/tv_green"
                android:textSize="20sp"
                android:text="214343"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/today"
                android:textColor="@color/tv_666"
                android:textSize="16sp"
                android:text="今日成交额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/today"
                android:textColor="@color/tv_666"
                android:textSize="16sp"
                android:text="今日订单数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/five"
        android:background="@drawable/shape_fill_white"
        android:layout_below="@id/money"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:id="@+id/ll_info"
                android:paddingTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@mipmap/seller"
                    android:layout_width="18dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:text="商家信息"
                    android:textSize="12sp"
                    android:textColor="@color/tv_666"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mana"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/mana"
                    android:layout_width="36dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:text="营收管理"
                    android:textSize="12sp"
                    android:textColor="@color/tv_666"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_enter"
                android:paddingTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/qianyue"
                    android:layout_width="18dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:text="签约管理"
                    android:textSize="12sp"
                    android:textColor="@color/tv_666"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_hide"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_below="@id/ll_mana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_sugg"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/sugg"
                        android:layout_width="18dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:text="意见反馈"
                        android:textSize="12sp"
                        android:textColor="@color/tv_666"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_help"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/help"
                        android:layout_width="18dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:text="帮助中心"
                        android:textSize="12sp"
                        android:textColor="@color/tv_666"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/show"
            android:src="@mipmap/down"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="10dp"
            android:layout_height="8dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/money"
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/empty"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_fill_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_shouyin"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c7"
            android:textSize="15sp"
            android:text="商户收银"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/small"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_shouyin"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/yipay"
                android:layout_width="30dp"
                android:layout_height="10dp"/>
            <ImageView
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/alipay"
                android:layout_width="30dp"
                android:layout_height="10dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/wechat"
                android:layout_width="30dp"
                android:layout_height="10dp"/>

        </RelativeLayout>
        <ImageView
            android:layout_below="@id/small"
            android:alpha="0.5"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/qrcode"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <com.cool.expandviewlibrary.ExpandView
        android:id="@+id/ev_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:anim_orientation="upleft"
        app:anim_duration="500">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/sugg" />
        </RelativeLayout>

    </com.cool.expandviewlibrary.ExpandView>

</RelativeLayout>