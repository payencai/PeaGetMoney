<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.BrandActivity">

    <include layout="@layout/pea_top"></include>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:alpha="0.8"
        android:textColor="@color/tv_333"
        android:text="店铺内景"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="@drawable/shape_solid_ccc"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="193dp">
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/inner"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:visibility="gone"
            android:textColor="#D0021B"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:text="示意图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="保存返回"
        android:layout_margin="15dp"
        android:background="@drawable/shape_fill_green"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>